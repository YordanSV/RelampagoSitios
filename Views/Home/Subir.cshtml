@model List<RelampagoSitios.Controllers.HomeController.PdfData>
@{
    ViewBag.Title = "Subir PDF";
    Layout = null;
    string nombreUsuario = Session["Nombre"] as string;
    bool usuarioLogueado = !string.IsNullOrEmpty(nombreUsuario);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #fdfdfb;
            padding-top: 60px;
        }

        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background-color: #2c5a73;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

            .header h2 {
                margin: 0;
                font-size: 20px;
            }

            .header .user-actions {
                display: flex;
                align-items: center;
                gap: 15px;
            }

                .header .user-actions span {
                    font-weight: bold;
                }

            .header a {
                color: white;
                text-decoration: none;
                padding: 6px 12px;
                border: 1px solid white;
                border-radius: 6px;
                transition: background-color 0.3s;
            }

                .header a:hover {
                    background-color: white;
                    color: #2c5a73;
                }

        .upload-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: calc(100vh - 60px);
            text-align: center;
            padding: 40px;
        }

        .upload-box {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.05);
        }

            .upload-box h1 {
                font-size: 32px;
                font-weight: bold;
                color: #1a1a1a;
            }

            .upload-box p {
                font-size: 16px;
                color: #555;
            }

        .upload-label {
            display: inline-block;
            padding: 12px 30px;
            background-color: #1f4ed8;
            color: white;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
        }

        .upload-note {
            margin-top: 10px;
            font-size: 14px;
            color: #999;
        }

        .success-message {
            color: green;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="header">
        <h2>Subir PDF</h2>
        <div class="user-actions">
            @if (usuarioLogueado)
            {
                <span>@nombreUsuario</span>
                <a href="@Url.Action("Logout", "Home")">Cerrar sesión</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Home")">Iniciar sesión</a>
            }
        </div>
    </div>

    <div class="upload-container">
        <div class="upload-box">
            <h1>Sube un PDF</h1>
            <p>Te ayudamos a conseguir cualquier palabra dentro de un PDF</p>

            @using (Html.BeginForm("Subir", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="archivoPdf" accept="application/pdf" style="display: none;" id="archivoPdf" onchange="this.form.submit()" />
                <label for="archivoPdf" class="upload-label">Subir PDF</label>
            }

            <p class="upload-note">o arrastra y suelta el PDF aquí</p>

            @if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
            {
                <p class="success-message">@ViewBag.Mensaje</p>
            }
        </div>
    </div>
</body>
</html>
