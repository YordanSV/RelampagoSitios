@model List<RelampagoSitios.Controllers.HomeController.PdfData>
@{
    Layout = null;
    string nombreUsuario = Session["Nombre"] as string;
    bool usuarioLogueado = !string.IsNullOrEmpty(nombreUsuario);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Buscar palabras</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fefefe;
            margin: 0;
            padding-top: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            min-height: 100vh;
        }

        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 60px;
            background-color: #2c5a73;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

            .header h2 {
                margin: 0;
                font-size: 20px;
            }

            .header .user-actions {
                display: flex;
                align-items: center;
                gap: 15px;
            }

                .header .user-actions span {
                    font-weight: bold;
                }

            .header a {
                color: white;
                text-decoration: none;
                padding: 6px 12px;
                border: 1px solid white;
                border-radius: 6px;
                transition: background-color 0.3s;
            }

                .header a:hover {
                    background-color: white;
                    color: #2c5a73;
                }

        .container {
            text-align: center;
            margin-top: 20px;
        }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            color: #1f1f1f;
            margin-bottom: 20px;
        }

        .search-box {
            display: flex;
            justify-content: center;
        }

            .search-box input[type="text"] {
                padding: 10px 15px;
                width: 250px;
                border: 1px solid #ccc;
                border-right: none;
                border-radius: 8px 0 0 8px;
                font-size: 1rem;
                outline: none;
            }

            .search-box button {
                padding: 10px 20px;
                background-color: #2c5a73;
                color: white;
                border: 1px solid #2c5a73;
                border-radius: 0 8px 8px 0;
                cursor: pointer;
                font-size: 1rem;
            }

        .result {
            margin-top: 40px;
            width: 80%;
            max-width: 900px;
        }

        .card {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 15px;
            text-align: left;
            background-color: #f9f9f9;
        }

        .card-title {
            font-weight: bold;
            font-size: 1.1rem;
            color: #333;
        }

        .card-content {
            margin-top: 10px;
            color: #555;
        }

        .no-results {
            margin-top: 40px;
            color: #888;
        }

        .resaltado {
            background-color: yellow;
            font-weight: bold;
        }

        .btn-ver {
            margin-top: 10px;
            display: inline-block;
            padding: 6px 12px;
            background-color: #3498db;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 0.9rem;
        }

            .btn-ver:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body>

    <!-- Header con saludo y logout/login -->
    <div class="header">
        <h2>Sistema de Búsqueda</h2>
        <div class="user-actions">
            @if (usuarioLogueado)
            {
                <span>@nombreUsuario</span>
                <a href="@Url.Action("Logout", "Home")">Cerrar sesión</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Home")">Iniciar sesión</a>
            }
        </div>
    </div>

    <div class="container">
        <h1>Buscar palabras</h1>
        @using (Html.BeginForm("buscapalabras", "Home", FormMethod.Get))
        {
            <div class="search-box">
                <input type="text" name="terminoBusqueda" placeholder="Escribe una palabra" value="@ViewBag.TerminoBusqueda" />
                <button type="submit">Buscar</button>
            </div>
        }

        @if (Model != null && Model.Count > 0)
        {
            <div class="result">
                @foreach (var pdf in Model)
                {
                    <div class="card">
                        <div class="card-title">@pdf.Nombre</div>
                        <div class="card-content">
                            @{
                                string termino = ViewBag.TerminoBusqueda as string;
                                string contenido = pdf.Contenido;

                                if (!string.IsNullOrEmpty(termino))
                                {
                                    string marcado = $"<span class='resaltado'>{termino}</span>";
                                    contenido = System.Text.RegularExpressions.Regex.Replace(
                                        contenido,
                                        System.Text.RegularExpressions.Regex.Escape(termino),
                                        marcado,
                                        System.Text.RegularExpressions.RegexOptions.IgnoreCase
                                    );
                                }

                                string contenidoResumido = contenido.Length > 200 ? contenido.Substring(0, 200) + "..." : contenido;
                            }
                            @Html.Raw(contenidoResumido)
                        </div>

                        <a href="@Url.Action("VerPdf", "Home", new { id = pdf.Id, termino = ViewBag.TerminoBusqueda })" class="btn-ver">Ver PDF completo</a>
                    </div>
                }
            </div>
        }
        else if (ViewBag.TerminoBusqueda != null)
        {
            <div class="no-results">No se encontraron resultados.</div>
        }
    </div>
</body>
</html>
