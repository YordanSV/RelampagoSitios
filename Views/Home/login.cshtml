@{
    ViewBag.Title = "Iniciar sesión";
    Layout = null; // Opcional, si no usas un Layout
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
        body {
            margin: 0;
            background-color: #fdfdfb;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #fdfdfb;
            padding: 40px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.05);
        }

        h1 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #1a1a1a;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
            color: #333;
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 14px;
            box-sizing: border-box;
        }

        .btn-login {
            background-color: #d93025;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

            .btn-login:hover {
                background-color: #c8231c;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>Iniciar sesión</h1>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="correo">Correo electrónico</label>
                <input type="text" id="correo" name="Correo" placeholder="Correo" value="roberto@gmail.com" required />
            </div>


            <div class="form-group">
                <label for="contrasena">Contraseña</label>
                <input type="password" id="contrasena" name="Contrasena" placeholder="Contraseña" value="holamundo" required />
            </div>

            <input type="submit" value="Iniciar sesión" class="btn-login" />
        }

        @if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
        {
            <p style="color: red; margin-top: 15px;">@ViewBag.Mensaje</p>
        }
    </div>
</body>
</html>
